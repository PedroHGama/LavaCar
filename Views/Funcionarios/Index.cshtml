@model IEnumerable<WashCar.Models.Funcionario>

@{
    ViewData["Title"] = "Funcionário";
}

<h1>Funcionários</h1>

<p>
    <a asp-action="Create">Novo Cadastro</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Endereco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DataNasc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CPF)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Endereco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DataNasc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cliente.IDCliente)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.IDFuncionario" style="margin-right: 12px;">
                        <img src="~/icones/icones/Edit.png" width="20" height="20">
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IDFuncionario" style="margin-right: 12px;">
                        <img src="~/icones/icones/Details.png" width="20" height="20">
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IDFuncionario" style="margin-right: 12px;">
                        <img src="~/icones/icones/Delete.png" width="20" height="20">
                    </a>
            </td>
        </tr>
}
    </tbody>
</table>
